{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Trillo app",
  "main": "index.js",
  "scripts": {
    "compile:sass": "node-sass sass/main.scss css/style.css",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server --port=8081 --browser=chrome",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:css": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat css/style.comp.css -o css/style.concat.css",
    "prefix:css": "postcss css/style.concat.css --use autoprefixer -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:css prefix:css compress:css"
  },
  "author": "minh.ng",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
